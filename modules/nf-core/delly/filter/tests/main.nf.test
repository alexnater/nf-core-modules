nextflow_process {

    name "Test Process DELLY_FILTER"
    script "../main.nf"
    process "DELLY_FILTER"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "delly"
    tag "delly/call"
    tag "delly/filter"

    test("germline - bcf") {
        setup {
            run("DELLY_CALL") {
                script "../../call/main.nf"
                    process {
                        """
                        input[0] = [
                            [ id:'control' ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_recalibrated_sorted_bam'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_recalibrated_sorted_bam_bai'], checkIfExists: true),
                            [],
                            [],
                            []
                            ]
                        input[1] = [
                            [ id:'human' ],
                            file(params.test_data['homo_sapiens']['genome']['genome_21_fasta'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['genome']['genome_21_fasta_fai'], checkIfExists: true)
                            ]
                        input[2] = [
                            [:],
                            [],
                            []
                            ]
                        """
                    }
                }
            }

        when {
            process {
                """
                input[0] = DELLY_CALL.out.bcf.join(DELLY_CALL.out.csi)
                input[1] = "germline"
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.versions }
            )
        }
    }

    test("germline - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [],
                    []
                    ]
                input[1] = "germline"
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.versions }
            )
        }

    }

    test("somatic - bcf") {
        setup {
            run("DELLY_CALL") {
                script "../../call/main.nf"
                    process {
                        """
                        input[0] = [
                            [ id:'tumor_control' ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test2_paired_end_recalibrated_sorted_bam'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test2_paired_end_recalibrated_sorted_bam_bai'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_recalibrated_sorted_bam'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_recalibrated_sorted_bam_bai'], checkIfExists: true),
                            []
                            ]
                        input[1] = [
                            [ id:'human' ],
                            file(params.test_data['homo_sapiens']['genome']['genome_21_fasta'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['genome']['genome_21_fasta_fai'], checkIfExists: true)
                            ]
                        input[2] = [
                            [:],
                            [],
                            []
                            ]
                        """
                    }
                }
            }
        when {
            process {
                """
                ch_input = DELLY_CALL.out.bcf
                            .join(DELLY_CALL.out.csi)
                            .map { meta, bcf, csi ->
                                def new_meta = [
                                    id: meta.id,
                                    tumor_samples: ['tumour'],
                                    control_samples: ['normal']
                                  ]
                                [ new_meta, bcf, csi ]
                            }
                input[0] = ch_input
                input[1] = "somatic"
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.versions }
            )
        }
    }
}
